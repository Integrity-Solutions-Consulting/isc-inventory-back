package com.isc.api.service.impl;

import java.io.InputStream;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import com.isc.api.entitys.EquipmentEntity;

import net.sf.jasperreports.engine.JRDataSource;
import net.sf.jasperreports.engine.JREmptyDataSource;
import net.sf.jasperreports.engine.JRException;
import net.sf.jasperreports.engine.JasperCompileManager;
import net.sf.jasperreports.engine.JasperExportManager;
import net.sf.jasperreports.engine.JasperFillManager;
import net.sf.jasperreports.engine.JasperPrint;
import net.sf.jasperreports.engine.JasperReport;
import net.sf.jasperreports.engine.data.JRBeanCollectionDataSource;
import net.sf.jasperreports.engine.util.JRLoader;

public class ReportServiceImpl {

	public byte[] generateReport(EquipmentEntity equipment) throws JRException {

        // 1. Cargar el archivo .jasper compilado
		InputStream reportStream = getClass().getResourceAsStream("/templates/report/report.jrxml");
		JasperReport jasperReport = JasperCompileManager.compileReport(reportStream);

        // 2. Lista para el dataset del subdataset "caracteristicas"

        // 3. Parámetros para el reporte principal
        Map<String, Object> params = new HashMap<>();
        params.put("employeeName", "Juan Pérez");
        params.put("employeeId", "1234567890");
        params.put("employeeIdType", "Cédula");
        params.put("itemCode", "LT-001");
        params.put("serialNumber", "SN12345678");
        params.put("brand", "Dell");
        params.put("model", "XPS 13");

        // 4. El datasource para el subdataset
        JRBeanCollectionDataSource caracteristicasDataSource =
                new JRBeanCollectionDataSource(equipment.getCharacteristic());

        // 5. Registrar el subdataset como parámetro (clave = nombre del dataset en el jrxml)
        params.put("caracteristicas", caracteristicasDataSource);

        // 6. Datasource principal (si no hay datos, se usa uno vacío)
        JRDataSource emptyDataSource = new JREmptyDataSource();

        // 7. Llenar el reporte
        JasperPrint jasperPrint = JasperFillManager.fillReport(jasperReport, params, emptyDataSource);

        // 8. Exportar a PDF (puedes exportar también a HTML, Excel, etc.)
        return JasperExportManager.exportReportToPdf(jasperPrint);
    }
}
