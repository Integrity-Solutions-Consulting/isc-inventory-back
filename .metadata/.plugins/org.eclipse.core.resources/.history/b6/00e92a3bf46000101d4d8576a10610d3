package com.isc.api.service;

import java.util.List;

import org.springframework.http.ResponseEntity;

import com.isc.api.dto.request.InvoiceRequestDTO;
import com.isc.api.dto.response.EquipmentDetailResponseDTO;
import com.isc.api.dto.response.InvoiceDetailResponseDTO;
import com.isc.api.dto.response.InvoiceResponseDTO;
import com.isc.api.dto.response.MessageResponseDTO;
import com.isc.dtos.ResponseDto;

public interface InvoiceService {
	public ResponseDto<List<InvoiceDetailResponseDTO>> getAllDetails();
	public ResponseDto<List<InvoiceResponseDTO>> getSimpleList();
	public ResponseDto<ResponseDto<InvoiceDetailResponseDTO>> save(InvoiceRequestDTO request);
	public ResponseDto<ResponseDto<InvoiceDetailResponseDTO>> update(InvoiceRequestDTO request, Integer id);
	public ResponseDto<MessageResponseDTO> inactive(Integer id);
	public ResponseDto<MessageResponseDTO> active(Integer id);
	public ResponseDto<InvoiceDetailResponseDTO> getInvoiceById(Integer id);
	public ResponseDto<InvoiceDetailResponseDTO> getInvoiceByInvoiceNumber(String invoiceNumber);
	public ResponseDto<EquipmentDetailResponseDTO> getInvoiceBySerialNumber(String serialNumber);

}
